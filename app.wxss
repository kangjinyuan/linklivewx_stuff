/**app.wxss**/

image {
  display: inline;
}

.scrollbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: auto;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-dw {
  width: 34rpx;
  height: 38rpx;
}

.icon-sreach {
  width: 28rpx;
  height: 28rpx;
}

.icon image, .icon-dw image, .icon-speed image, .icon-comment image,
.icon-logo image, .icon-nodata image, .mine-info-bg image, .headimg image,
.icon-sreach image {
  width: 100%;
  height: 100%;
}

.icon-left {
  position: absolute;
  top: 0;
  left: 0rpx;
  bottom: 0;
  margin: auto auto;
}

.icon-center {
  position: absolute;
  top: 0;
  left: 0rpx;
  right: 0;
  bottom: 0;
  margin: auto auto;
}

.icon-right {
  position: absolute;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto auto;
}

.icon-stufftel {
  width: 20rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0rpx;
  bottom: 0;
  margin: auto auto;
}

.icon-jump {
  width: 16rpx;
  height: 28rpx;
}

.order-box {
  width: 690rpx;
  padding: 30rpx 0rpx;
  margin: 0rpx auto;
}

.order-list {
  width: 630rpx;
  margin: 0rpx auto 40rpx;
  overflow: hidden;
  padding: 0rpx 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.order-list:last-child {
  margin-bottom: 0rpx;
}

.order-type {
  width: 574rpx;
  padding-left: 66rpx;
  height: 108rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
  font-size: 32rpx;
  line-height: 108rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rob-btn, .order-type-text {
  width: 120rpx;
  height: 56rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #fda414;
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
}

.big-btn {
  width: 690rpx;
  margin: 60rpx auto 0rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #fda414;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #fff;
}

.rob-btn {
  color: #fff;
  border-radius: 28rpx;
  background-color: #fda414;
}

.order-con {
  width: 100%;
  padding: 26rpx 0rpx;
  overflow: hidden;
  position: relative;
}

.order-dir, .order-time {
  width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.order-time {
  margin-bottom: 0rpx;
  font-size: 24rpx;
  color: #999;
}

.box-shadow {
  box-shadow: 0rpx 0rpx 25rpx 6rpx #f9eedc;
}

.opera-box {
  width: 650rpx;
  margin: 0rpx auto 30rpx;
  padding: 0rpx 20rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #333;
}

.opera-box:last-child {
  margin-bottom: 0rpx;
}

.opera-input {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
  overflow: hidden;
  position: relative;
}

.opera-input:last-child {
  border-bottom: none;
}

.opera-input input {
  width: 586rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #333;
}

.opera-box .full-input {
  width: 100%;
}

.nodata-box {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
  position: absolute;
  top: 0;
  left: 0;
}

.nodata {
  width: 330rpx;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
}

.nodata view{
  width: 100%;
}

.nodata-community {
  height: 196rpx;
}

.nodata-order {
  height: 210rpx;
}

.nodata .text {
  width: 100%;
  height: 170rpx;
  font-size: 28rpx;
  line-height: 170rpx;
  text-align: center;
  color: #999;
}
