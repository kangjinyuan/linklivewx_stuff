/**app.wxss**/

image {
  display: inline;
}

.scrollbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: auto;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.icon {
  width: 44rpx;
  height: 44rpx;
}

.icon-dw {
  width: 34rpx;
  height: 38rpx;
}

.icon image, .icon-dw image, .icon-speed image, .icon-comment image,
.icon-logo image, .icon-nodata image {
  width: 100%;
  height: 100%;
}

.icon-value {
  position: absolute;
  top: 0;
  left: 8rpx;
  bottom: 0;
  margin: auto auto;
}

.icon-jump {
  width: 27rpx;
  height: 45rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0rpx;
  margin: auto auto;
}

.order-box {
  width: 690rpx;
  padding: 30rpx 0rpx;
  margin: 0rpx auto;
}

.order-list {
  width: 640rpx;
  margin: 0rpx auto;
  overflow: hidden;
  padding: 0rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 25rpx 6rpx #f9eedc;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-list:last-child {
  margin-bottom: 0rpx;
}

.order-type {
  width: 560rpx;
  padding-left: 80rpx;
  height: 106rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
  font-size: 30rpx;
  line-height: 106rpx;
  color: #333;
}

.rob-btn, .order-type-text {
  width: 120rpx;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #fda414;
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
}

.big-btn {
  width: 630rpx;
  margin: 60rpx auto 0rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #fda414;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #fff;
}

.rob-btn {
  color: #fff;
  border-radius: 10rpx;
  background-color: #fda414;
}

.order-con {
  width: 100%;
  padding: 20rpx 0rpx 38rpx;
  overflow: hidden;
  position: relative;
}

.order-dir, .order-time {
  width: 580rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 52rpx;
}

.order-dir {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -moz-box-orient: vertical;
  -moz-line-clamp: 2;
  -o-box-orient: vertical;
  -o-line-clamp: 2;
  -ms-box-orient: vertical;
  -ms-line-clamp: 2;
}

.order-time {
  color: #999;
}

.nodata-box {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
  position: absolute;
  top: 0;
  left: 0;
}

.nodata {
  width: 330rpx;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
}

.icon-nodata {
  width: 330rpx;
  height: 210rpx;
}

.nodata .text {
  width: 100%;
  height: 170rpx;
  font-size: 28rpx;
  line-height: 170rpx;
  text-align: center;
  color: #999;
}
