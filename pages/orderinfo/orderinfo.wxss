.order-list {
  margin-bottom: 60rpx;
}

.orderinfo-dir-box {
  width: 100%;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 42rpx;
  margin: 20rpx 0rpx;
}

.image-box {
  width: 100%;
  overflow: hidden;
  margin: 20rpx auto 0rpx;
}

.image-box image {
  display: block;
  width: 136rpx;
  height: 136rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.orderinfo-title {
  width: 100%;
  height: 106rpx;
  font-size: 30rpx;
  line-height: 106rpx;
  color: #333;
  font-weight: bold;
}

.speed-box {
  width: 100%;
  margin-bottom: 38rpx;
}

.speed-list {
  width: 580rpx;
  margin: 0rpx auto;
  padding-left: 30rpx;
  height: 110rpx;
  border-left: 2rpx solid #ccc;
  position: relative;
}

.speed-list:last-child {
  border-left: 0rpx solid #ccc;
}

.speed-dir, .speed-time {
  font-size: 28rpx;
  width: 100%;
  height: 44rpx;
  color: #666;
}

.speed-list:first-child .speed-dir {
  color: #fda414;
}

.speed-time {
  font-size: 26rpx;
  color: #999;
}

.icon-speed2 {
  background-color: #fff;
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 0rpx;
  left: -18rpx;
}

.icon-speed1 {
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  top: -0rpx;
  left: -9rpx;
}

.comment-box {
  width: 100%;
  margin-bottom: 38rpx;
  overflow: hidden;
}

.icon-box {
  width: 88rpx;
  overflow: hidden;
  float: left;
}

.icon-comment {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 20rpx;
}

.icon-text {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #fda414;
}

.comment-con {
  width: 520rpx;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
  float: right;
}
