.login-box {
  width: 630rpx;
  margin: 0rpx auto;
}

.login-title {
  width: 100%;
  margin: 150rpx auto;
  font-size: 48rpx;
  line-height: 48rpx;
  color: #333;
  font-weight: 500;
}

.login-con {
  width: 100%;
  overflow: hidden;
}

.login-value {
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
  margin-bottom: 60rpx;
  overflow: hidden;
}

.login-value:last-child {
  margin-bottom: 0rpx;
}

.login-value input {
  display: block;
  width: 100%;
  height: 28rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
}

.big-btn {
  width: 100%;
  margin-top: 100rpx;
}
