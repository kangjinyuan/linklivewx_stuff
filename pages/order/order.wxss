.tab-box {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
}

.tab-list {
  width: 250rpx;
  height: 100%;
  float: left;
  position: relative;
}

.tab-list .text {
  width: 100%;
  height: 84rpx;
  font-size: 30rpx;
  line-height: 84rpx;
  color: #333;
  text-align: center;
}

.tab-list .selectedColor {
  color: #fda414;
}

.tab-list .selected {
  width: 60rpx;
  height: 4rpx;
  background-color: #fda414;
  margin: 0rpx auto;
}

.order-box-padding {
  padding-top: 118rpx;
}
