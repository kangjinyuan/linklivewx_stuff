.tab-box {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
}

.tab-list {
  width: 250rpx;
  height: 86rpx;
  float: left;
  font-size: 30rpx;
  line-height: 86rpx;
  color: #333;
  text-align: center;
  position: relative;
}

.tab-line {
  width: 60rpx;
  height: 4rpx;
  background-color: #fda414;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
}

.order-box-padding {
  padding-top: 118rpx;
}
