.mine-info {
  width: 100%;
  height: 250rpx;
  position: relative;
}

.mine-info-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.mine-info-box {
  width: 670rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto auto;
}

.headimg {
  width: 162rpx;
  height: 162rpx;
  float: left;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 45rpx;
}

.info {
  width: 478rpx;
  height: 162rpx;
  padding: 44rpx 0rpx;
  float: right;
}

.info-text {
  width: 100%;
  height: 100rpx;
  font-size: 48rpx;
  line-height: 100rpx;
  color: #fff;
  position: relative;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tel {
  width: 460rpx;
  padding-left: 30rpx;
  height: 34rpx;
  font-size: 30rpx;
  line-height: 34rpx;
}

.mine-service {
  width: 690rpx;
  margin: 0rpx auto;
  overflow: hidden;
}

.service-list {
  width: 610rpx;
  height: 126rpx;
  padding: 0rpx 0rpx 0rpx 80rpx;
  font-size: 32rpx;
  line-height: 126rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
}

.service-list button {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
