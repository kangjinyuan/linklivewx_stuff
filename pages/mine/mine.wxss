.mine-box {
  width: 100%;
}

.mine-info {
  width: 100%;
  height: 250rpx;
  position: relative;
}

.mine-info-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.mine-info-box {
  width: 690rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto auto;
}

.headimg {
  width: 160rpx;
  height: 160rpx;
  float: left;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 45rpx;
}

.info {
  width: 500rpx;
  height: 160rpx;
  padding: 45rpx 0rpx;
  float: right;
}

.info-text {
  width: 100%;
  height: 100rpx;
  font-size: 52rpx;
  line-height: 80rpx;
  color: #fff;
  position: relative;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tel {
  width: 460rpx;
  padding-left: 40rpx;
  height: 34rpx;
  font-size: 30rpx;
  line-height: 34rpx;
}

.mine-service {
  width: 690rpx;
  margin: 0rpx auto;
  overflow: hidden;
  padding: 20rpx 0rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.mine-service:last-child {
  border: none;
}

.service-list {
  width: 626rpx;
  height: 45rpx;
  padding: 20rpx 0rpx 20rpx 64rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  position: relative;
}
