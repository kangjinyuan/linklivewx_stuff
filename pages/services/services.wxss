.services-box {
  width: 100%;
  margin-top: 30rpx;
  overflow: hidden;
}

.services-list {
  width: 250rpx;
  overflow: hidden;
  margin-bottom: 62rpx;
  float: left;
}

.services-icon {
  width: 100%;
  height: 68rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.services-icon image {
  width: 68rpx;
  height: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
}

.services-list .text {
  width: 100%;
  font-size: 26rpx;
  text-align: center;
  color: #333;
}

.dw-box {
  width: 636rpx;
  height: 98rpx;
  padding-left: 54rpx;
  margin: 0rpx auto;
  font-size: 30rpx;
  line-height: 98rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}
