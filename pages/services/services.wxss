.services-box {
  width: 100%;
  overflow: hidden;
}

.services-list {
  width: 187.5rpx;
  overflow: hidden;
  float: left;
}

.services-icon {
  width: 100%;
  height: 108rpx;
  position: relative;
}

.services-icon image {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
}

.text {
  width: 100%;
  height: 48rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333;
}
