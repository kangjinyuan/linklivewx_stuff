.location-box {
  width: 100%;
  height: 38rpx;
  padding: 21rpx 0rpx;
  background-color: #fda414;
  overflow: hidden;
  position: fixed;
  z-index: 99;
}

.location {
  width: 634rpx;
  margin: 0rpx auto;
  height: 100%;
  padding-left: 44rpx;
  position: relative;
}

.location .text, .icon-select-location {
  float: left;
}

.location-box .text {
  width: auto;
  max-width: 280rpx;
  height: 100%;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #fff;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}

.icon-select-location {
  margin: 16rpx 0rpx 0rpx 10rpx;
}

.services-box {
  width: 100%;
  padding-top: 122rpx;
  position: relative;
}

.services-box-bg {
  width: 100%;
  height: 284rpx;
  z-index: -1;
}

.swiper-box {
  width: 690rpx;
  margin: 0rpx auto;
  height: 220rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

swiper {
  width: 100%;
  height: 100%;
}

.swiper-box .wx-swiper-dot {
  width: 20rpx;
  height: 6rpx;
  border-radius: 3rpx;
}

.swiper-box .wx-swiper-dot::before {
  background-color: #ccc;
}

.swiper-box .wx-swiper-dot-active::before {
  background-color: #fda414;
}

.services-list {
  width: 25%;
  height: 100%;
  float: left;
}

.services-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx auto 20rpx;
  position: relative;
}

.services-list .text {
  width: 100%;
  font-size: 26rpx;
  line-height: 26rpx;
  text-align: center;
  color: #333;
}

.schedule-end-time-box {
  width: 100%;
  margin: 20rpx auto 30rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #666;
}

.common-list {
  padding: 40rpx 30rpx 50rpx;
}

.proprietor-maintenance-list-box {
  padding: 40rpx 0rpx 50rpx;
}

.index-title-box {
  width: 630rpx;
  margin: 0rpx auto;
  text-indent: 26rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
  font-weight: 500;
  position: relative;
}

.index-title-line {
  width: 6rpx;
  height: 100%;
  border-radius: 3rpx;
  background-color: #fda414;
}

.index-list-box {
  width: 100%;
  margin-top: 50rpx;
  overflow: hidden;
}

.proprietor-maintenance-list, .check-task-list {
  overflow: hidden;
  float: left;
}

.proprietor-maintenance-list {
  width: 170.5rpx;
  border-right: 2rpx solid #f4f4f4;
}

.proprietor-maintenance-list:last-child {
  width: 172.5rpx;
  border-right: none;
}

.check-task-list {
  width: 50%;
  margin-bottom: 40rpx;
}

.check-task-list:nth-child(3), .check-task-list:nth-child(4) {
  margin-bottom: 0rpx;
}

.indx-list-count, .index-list-text {
  width: 100%;
}

.index-list-count {
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 500;
  color: #fa8c29;
}

.index-list-text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #666;
}

.proprietor-maintenance-list .index-list-count,
.proprietor-maintenance-list .index-list-text {
  text-align: center;
}

.proprietor-maintenance-list .index-list-count {
  margin-bottom: 20rpx;
}

.icon-check-task-list {
  margin-left: 45rpx;
  float: left;
}

.check-task-list-text-box {
  width: auto;
  overflow: hidden;
  margin-left: 32rpx;
  float: left;
}

.check-task-list-text-box .index-list-text {
  margin-bottom: 20rpx;
}

.check-task-list-text-box .index-list-count {
  color: #ee370b;
}
