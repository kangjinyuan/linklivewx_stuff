<view class="container-default">
  <form bindsubmit="completeWorkOrder" report-submit='true'>
    <view class='form-box'>
      <view class='module-box'>
        <view class='module'>
          <view class='form-content-box'>
            <view class="form-textarea">
              <textarea placeholder="请填写结果描述" value='{{eventDetail}}' bindinput='getEventDetail' maxlength="150"></textarea>
            </view>
            <view class='word-number'>{{eventDetail.length}}/150</view>
          </view>
        </view>
      </view>
    </view>
    <button class='big-btn icon-bottom' form-type="submit">提交</button>
  </form>
</view>