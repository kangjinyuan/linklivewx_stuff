.face-describe {
  width: 690rpx;
  height: 82rpx;
  padding: 30rpx;
  background-color: #f4f5f7;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #666;
}

.face-box {
  width: 690rpx;
  overflow: hidden;
  margin: 0rpx auto;
}

.face-list-box {
  width: 100%;
  padding: 50rpx 0rpx;
  overflow: hidden;
}

.face-list {
  width: 210rpx;
  height: 338rpx;
  float: left;
  margin-right: 28rpx;
}

.face-list:last-child {
  margin-right: 0rpx;
}

.face-list-title {
  width: 100%;
  height: 58rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.face-list-image {
  width: 100%;
  height: 280rpx;
}

.face-list-image image {
  width: 100%;
}

.face-care-box {
  width: 100%;
  overflow: hidden;
}

.face-care-title {
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  color: #333;
}

.face-care-con {
  width: 100%;
}

.face-care-con view {
  width: 100%;
  height: 58rpx;
  font-size: 28rpx;
  color: #666;
}
