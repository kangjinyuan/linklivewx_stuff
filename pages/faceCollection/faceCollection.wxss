camera {
  position: relative;
  padding-bottom: 133.33%;
}

.face-collection-btn-box {
  position: relative;
}

.face-collection-bg {
  width: 100%;
  height: auto;
}

.face-collection-box {
  width: 300rpx;
  height: 158rpx;
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  margin: auto auto;
}

.face-collection-index-title {
  width: 100%;
  height: 98rpx;
  font-size: 48rpx;
  color: #fff;
  text-align: center;
}

.face-collection-index-box {
  width: 100%;
  height: 60rpx;
}

.face-collection-index {
  width: 60rpx;
  height: 100%;
  float: left;
  margin-right: 60rpx;
}

.face-collection-index:last-child {
  margin-right: 0rpx;
}

.photo-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.photo-img-box, .user-photo-box {
  width: 100%;
  position: relative;
}

.use-photo-fail-box {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 0;
  bottom: 0rpx;
  left: 50rpx;
  margin: auto auto;
}

.use-photo-fail-text {
  width: 100%;
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
  text-align: center;
}

.icon-camera-device {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
