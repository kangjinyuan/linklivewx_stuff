camera, .photo-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.face-collection-bg {
  width: 100%;
}

.face-collection-box {
  width: 300rpx;
  height: 208rpx;
  position: absolute;
  bottom: 218rpx;
  left: 0;
  right: 0;
  margin: auto auto;
}

.face-collection-index-title {
  width: 100%;
  height: 148rpx;
  font-size: 48rpx;
  color: #fff;
  text-align: center;
}

.face-collection-index-box {
  width: 100%;
  height: 60rpx;
}

.face-collection-index {
  width: 60rpx;
  height: 100%;
  float: left;
  margin-right: 60rpx;
}

.face-collection-index:last-child {
  margin-right: 0rpx;
}

.photo-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.photo-img-box {
  width: 100%;
}

.photo-img-box image {
  width: 100%;
}

.use-photo-ok {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 36rpx;
  left: 0;
  right: 0;
  margin: auto auto;
}

.use-photo-fail-box {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  bottom: 50rpx;
  left: 50rpx;
}

.use-photo-fail-img {
  width: 48rpx;
  height: 40rpx;
  margin: 0rem auto 20rpx;
}

.use-photo-fail-text {
  width: 100%;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
  text-align: center;
}

.face-collection-btn {
  width: 136rpx;
  height: 136rpx;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto auto;
}

.face-collection-btn image {
  width: 100%;
  height: 100%;
}
